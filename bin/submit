#!/usr/bin/env bash

# 1. compile code
# 2. upload binary
# 3. upload source

DEST=$CCTF_PATH"/dirs/$USER"

if make
then
	echo "Build succeeded."
	if cp $SRC_NAME $DEST/src
	then
		echo "Uploaded to $DEST/src!"
	else
		echo "Error copying source! to $DEST/src!"
		exit 1
	fi

	if cp $BIN_NAME $DEST/bin
	then
		echo "Uploaded to $DEST/bin!"
	else
		echo "Error copying binary to $DEST/bin!"
		exit 1
	fi
else
	echo "Build failed!"
	exit 1
fi
